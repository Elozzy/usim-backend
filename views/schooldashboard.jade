  body
    #mySidenav.sidenav
      a.closebtn(href='javascript:void(0)', onclick='closeNav()') Ã—
      img.profile(src='/css/img/lms.jpg', alt='')
      p#school-name School Name
      ul
        li
          a(href='/index.html') Home
        li
          a#announce(href='#') Announcements
        li
          a(href='#') Library
        li
          a(href='#') e-library
        li
          a(href='#') Forum
        li
